{
  "compilerOptions": {
    "target": "ESNext",
    "module": "ESnext",
    "moduleResolution": "Bundler",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "outDir": "./dist",
    "rootDir": "api",
    "types": ["node", "jest", "express"]
  },
  "include": ["api/**/*.ts", "jest"],
  "exclude": ["node_modules"]
}
