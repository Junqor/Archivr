{
  "compilerOptions": {
    "target": "ESNext",
    "module": "NodeNext",
    "moduleResolution": "NodeNext",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "outDir": "./dist",
    "rootDir": "src",
    "types": ["node", "jest", "express"]
  },
  "include": ["src/**/*.ts", "jest", "src/utils/slugify.js"],
  "exclude": ["node_modules"]
}
